{% extends 'base.html.twig' %}

{% block body %}	
	{% if message is defined %}	

		<div class="contact-message">{{message}}</div>

	{% else %}

		<div class="contact-form">
			<div class="titlu-contact"><h3>Contacteaza-ne</h3></div>
			{{form_start(contactForm)}}
				
				{{form_widget(contactForm)}}

				<button type="submit" class="btn btn-primary">Trimite mesaj</button>
			{{form_end(contactForm)}}	
		</div>

	{% endif %}
{% endblock %}

{% block javascripts %}
	<script type="text/javascript">
		$( document ).ready(function() {
				
			$('a:contains("Contact")').css('color', '#000000');				
		});

	</script>
{% endblock %}