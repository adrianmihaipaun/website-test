{% extends 'base.html.twig' %}

{% block body %}
	<div class="titlu-contact"><h3>{{title}}</h3></div>
	<div class="formular">
		<form action="">
		  <div class="form-group  col-xs-6 col-sm-6 col-lg-6 f-left">
		    <label for="name">Nume:</label>
		    <input type="text" class="form-control" id="name" required="required">
		  </div>
		  <div class="form-group  col-xs-6 col-sm-6 col-lg-6 f-left">
		    <label for="emails">Email:</label>
		    <input type="email" class="form-control" id="emails" required="required">
		  </div>
		  <div class="form-group  col-xs-12 col-sm-12 col-lg-12">
		    <label for="message">Mesaj:</label>
	  		<textarea class="form-control" rows="5" id="message"></textarea>
		  </div>
		  
		  <button type="submit" class="btn btn-primary">Trimite mesaj</button>
		</form>
	</div>
	
{% endblock %}

{% block javascripts %}
	<script type="text/javascript">
		$( document ).ready(function() {
		$('a:contains("Contact")').css('color', '#000000');
		});
	</script>
{% endblock %}